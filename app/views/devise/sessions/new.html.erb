<div class="container">
	<div class="devise-form">
		<h2>Sign in</h2>

		<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:id => "new-user-session-form", :role => 'form'}) do |f| %>
		  <div class="form-group">
			  <div><%= f.label :email %><br />
			  <%= f.email_field :email, autofocus: true, class: "form-control" %></div>
			 </div>

			<div class="form-group">
			  <div><%= f.label :password %><br />
			    <%= f.password_field :password, autocomplete: "off", class: "form-control" %></div>
			</div>
		  <% if devise_mapping.rememberable? -%>
		    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
		  <% end -%>

		  <div><%= f.submit "Sign in", class: 'btn btn-default devise-submit' %></div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>
