= link_to 'View all gifts', gifts_path
.container
	.col-xs-12.col-sm-1.pull-right
	.col-xs-12.col-sm-3#user-sidebar.pull-right
		#user-profile-name
			%h3
				= full_name
	.col-xs-12.col-sm-6.col-sm-offset-1#user-feed-title
		%h1
			Recent Activity
	.col-xs-12.col-sm-6.col-sm-offset-1#user-profile-feed
		-if recent_activity
			- recent_activity.each do |event|
				.user-single-feed
					.profile-image-feed
						= image_tag(@venmo_account.profile_pic, width: '50px')
					- if event.class.name == 'Pledge'
						.feed-content
							.feed-description
								= first_name
								made a pledge to
								= link_to event.pledge_gift.name, event.pledge_gift
								.feed-timestamp
									= time_ago_in_words(event.updated_at)
									ago
						.feed-gift-image
							= image_tag(event.pledge_gift.avatar.url(:large), width: '100%')
					- elsif event.class.name == 'Gift'
						.feed-content
							.feed-description
								= first_name
								created a new campaign:
								= link_to event.name, event
							.feed-timestamp
								= time_ago_in_words(event.updated_at)
								ago
						.feed-gift-image
							= image_tag(event.avatar.url(:large), width: '100%')




