<!DOCTYPE html>
<html>
<head>
  <title>Grifter</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-default" role="navigation">

			<% if user_signed_in? %>
				<p class="navbar-text">
				<%= current_user.email %>
				</p>
				<%= link_to 'Sign Out', destroy_user_session_path, class: "btn btn-default navbar-btn", method: :delete %>
			<% else %>
				<%= link_to 'User Login', new_user_session_path, class: "btn btn-default navbar-btn" %>
				<%= link_to 'Create an Account', new_user_registration_path, class: "btn btn-default navbar-btn" %>
			<% end %>

	</nav>

	<% flash.each do |name, msg| %>
	  <% if msg.is_a?(String) %>
	    <%= content_tag :div, msg, :class => "flash_#{name}" %>
	  <% end %>
	<% end %>

<%= yield %>

</body>
</html>
